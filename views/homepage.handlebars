<div id="currentGame" class="currentGame">
    {{!-- <button id="nextButton">
        <a href="/home?id={{id}}">NEXT</a>
    </button> --}}
    <div class="currentGameBox">
        <div class="currentGameHeader">
            <h5>Current Game</h5>
            <div class="headerContainer">
                <div class="headerRow">
                    <div class="col-5 headerColumn">
                        {{!-- <img id="headerLogo" src="https://upload.wikimedia.org/wikipedia/en/thumb/4/45/{{currentData.away.market}}_{{currentData.away.name}}_logo.svg/1200px-{{currentData.away.market}}_{{currentData.away.name}}_logo.svg.png" alt=""> --}}
                        <h6 id="headerTeam">{{liveData.liveData.boxscore.teams.away.team.name}}</h6>
                        <p class="teamRecord">{{gamesArray.homeWins}}-{{teamRecords.away.leagueRecord.losses}}-{{teamRecords.away.leagueRecord.ot}}</p>
                        {{#if liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.goals}}
                        <h1 id="headerScore">{{liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.goals}}</h1>
                        {{else}}
                        <h1 id="headerScore">0</h1>
                        {{/if}}
                    </div>
                    <div>
                        {{#if liveData.liveData.linescore.currentPeriodOrdinal}}
                        <p class="headerPeriod">{{liveData.liveData.linescore.currentPeriodOrdinal}} Period</p>
                        {{else}}
                        <p class="headerPeriod">1st Period</p>
                        {{/if}}
                        {{#if liveData.liveData.linescore.currentPeriodTimeRemaining}}
                        <p class="headerTime">{{liveData.liveData.linescore.currentPeriodTimeRemaining}}</p>
                        {{else}}
                        <p class="headerTime">20:00</p>
                        {{/if}}
                    </div>
                    <div class="col-5 headerColumn">
                        {{!-- <img id="headerLogo"
                            src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ae/New_York_Rangers.svg/1200px-New_York_Rangers.svg.png"
                            alt=""> --}}
                        <h6 id="headerTeam">{{liveData.liveData.boxscore.teams.home.team.name}}</h6>
                        <p class="teamRecord">
                            {{teamRecords.home.leagueRecord.wins}}-{{teamRecords.home.leagueRecord.losses}}-{{teamRecords.home.leagueRecord.ot}}
                        </p>
                        {{#if liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.goals}}
                        <h1 id="headerScore">{{liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.goals}}</h1>
                        {{else}}
                        <h1 id="headerScore">0</h1>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div id="statsColumn" class="container text-center">
            <div class="row">
                <div class="col-6 columnLeft">
                    <p class="staticValue">S.O.G:</p>
                    {{#if liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.shots}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.shots}}</p>
                    {{else}}
                    <p class="liveStat">0</p>
                    {{/if}}
                </div>
                <div class="col-6 columnRight">
                    <p class="staticValue">S.O.G:</p>
                    {{#if liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.shots}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.shots}}</p>
                    {{else}}
                    <p class="liveStat">0</p>
                    {{/if}}
                </div>
            </div>
            <div class="row">
                <div class="col-6 columnLeft">
                    <p class="staticValue">Faceoff Win Pct</p>
                    {{#if liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.faceOffWinPercentage}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.faceOffWinPercentage}}%</p>
                    {{else}}
                    <p class="liveStat">0%</p>
                    {{/if}}
                </div>
                <div class="col-6 columnRight">
                    <p class="staticValue">Faceoff Win Pct</p>
                    {{#if liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.faceOffWinPercentage}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.faceOffWinPercentage}}%</p>
                    {{else}}
                    <p class="liveStat">0%</p>
                    {{/if}}
                </div>
            </div>
            <div class="row">
                <div class="col-6 columnLeft">
                    <p class="staticValue">Hits</p>
                    {{#if liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.hits}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.hits}}</p>
                    {{else}}
                    <p class="liveStat">0</p>
                    {{/if}}
                </div>
                <div class="col-6 columnRight">
                    <p class="staticValue">Hits</p>
                    {{#if liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.hits}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.hits}}</p>
                    {{else}}
                    <p class="liveStat">0</p>
                    {{/if}}
                </div>
            </div>
            <div class="lastRow row">
                <div id="homeGoalie" class="col-6 columnLeft">
                    <p class="staticValue">PIM</p>
                    {{#if liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.pim}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.away.teamStats.teamSkaterStats.pim}}</p>
                    {{else}}
                    <p class="liveStat">0</p>
                    {{/if}}
                </div>
                <div id="awayGoalie" class="col-6 columnRight">
                    <p class="staticValue">PIM</p>
                    {{#if liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.pim}}
                    <p class="liveStat">{{liveData.liveData.boxscore.teams.home.teamStats.teamSkaterStats.pim}}</p>
                    {{else}}
                    <p class="liveStat">0</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>