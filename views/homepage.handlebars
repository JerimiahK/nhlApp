<div class="currentGame">
    <div class="currentGameBox">
        <div class="currentGameHeader">
            <h5>Current Game</h5>
            <div class="headerContainer">
                <div class="headerRow">
                    <div class="col-5 headerColumn">
                        <img id="headerLogo" src="https://upload.wikimedia.org/wikipedia/en/thumb/4/45/Colorado_Avalanche_logo.svg/1200px-Colorado_Avalanche_logo.svg.png" alt="">
                        <h6 id="headerTeam">{{currentData.away.market}} <br>{{currentData.away.name}}</h6>
                        <h1 id="headerScore">{{currentData.away.points}}</h1>
                    </div>
                    <div>
                        <p class="headerPeriod">Period {{currentData.period}}</p>
                        <p class="headerTime">{{currentData.clock_decimal}}</p>
                    </div>
                    <div class="col-5 headerColumn">
                        <img id="headerLogo"
                            src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ae/New_York_Rangers.svg/1200px-New_York_Rangers.svg.png"
                            alt="">
                        <h6 id="headerTeam">{{currentData.home.market}} <br>{{currentData.home.name}}</h6>
                        <h1 id="headerScore">{{currentData.home.points}}</h1>
                    </div>
                </div>
            </div>
        </div>
        <div id="statsColumn" class="container text-center">
            <div class="row">
                <div class="col-6 columnLeft">
                    <p class="staticValue">S.O.G:</p>
                </div>
                <div class="col-6 columnRight">
                    <p class="staticValue">S.O.G:</p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 columnLeft">
                    <p class="staticValue">Faceoff Wins:</p>
                </div>
                <div class="col-6 columnRight">
                    <p class="staticValue">Faceoff Wins:</p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 columnLeft">
                    <p class="staticValue">T.O.P:</p>
                    <p class="liveStat">19:42</p>
                </div>
                <div class="col-6 columnRight">
                    <p class="staticValue">T.O.P:</p>
                    <p class="liveStat">12:54</p>
                </div>
            </div>
            <div class="lastRow row">
                <div id="homeGoalie" class="col-6 columnLeft">
                    <p class="staticValue">Goalie In Net:</p>
                    <p class="liveStat">Alexander Georgiev</p>
                </div>
                <div id="awayGoalie" class="col-6 columnRight">
                    <p class="staticValue">Goalie In Net:</p>
                    <p class="liveStat">Igor Shesterkien</p>
                </div>
            </div>
        </div>
    </div>